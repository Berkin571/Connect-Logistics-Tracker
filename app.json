{
  "expo": {
    "name": "Connect-Logistics-Tracker",
    "slug": "Connect-Logistics-Tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "connectlogisticstracker",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.example.connectlogistics",
      "config": {
        "googleMapsApiKey": "${EXPO_PUBLIC_GMAPS_API_KEY}"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Die App nutzt Ihren Standort, um Fahrten und Lieferungen anzuzeigen.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Die App verfolgt Ihren Standort im Hintergrund, um Live-Tracking und Geofencing zu ermöglichen.",
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "package": "com.example.connectlogistics",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE"
      ],
      "config": {
        "googleMaps": { "apiKey": "${EXPO_PUBLIC_GMAPS_API_KEY}" }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "isAndroidBackgroundLocationEnabled": true,
          "locationAlwaysAndWhenInUsePermission": "Die App verfolgt Ihren Standort im Hintergrund für Live-Tracking und Geofencing.",
          "locationWhenInUsePermission": "Die App nutzt Ihren Standort, um Ihre aktuelle Position auf der Karte darzustellen."
        }
      ],
      "expo-secure-store",
      "expo-notifications"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
